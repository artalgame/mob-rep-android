<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:minWidth="25px"
    p1:minHeight="25px"
    p1:layout_width="fill_parent"
    p1:layout_height="fill_parent"
    p1:id="@+id/scrollView1">
    <LinearLayout
        p1:orientation="vertical"
        p1:minWidth="25px"
        p1:minHeight="25px"
        p1:layout_width="fill_parent"
        p1:layout_height="fill_parent"
        p1:id="@+id/linearLayout1">
        <TextView
            p1:text="Large Text"
            p1:textAppearance="?android:attr/textAppearanceLarge"
            p1:layout_width="fill_parent"
            p1:layout_height="wrap_content"
            p1:id="@+id/SubjectNameTextView"
            p1:layout_marginLeft="16dp"
            p1:layout_marginTop="8dp"
            p1:layout_marginRight="16dp"
            p1:layout_marginBottom="16dp"
            p1:layout_gravity="center"
            p1:gravity="center" />
        <Button
            p1:text="Тренировочные задания"
            p1:layout_width="fill_parent"
            p1:layout_height="wrap_content"
            p1:id="@+id/traningButton"
            p1:layout_marginLeft="16dp"
            p1:layout_marginTop="8dp"
            p1:layout_marginRight="16dp"
            p1:layout_marginBottom="8dp" />
        <Button
            p1:text="Пройти тест"
            p1:layout_width="fill_parent"
            p1:layout_height="wrap_content"
            p1:id="@+id/TestButton"
            p1:layout_marginLeft="16dp"
            p1:layout_marginRight="16dp"
            p1:layout_marginBottom="8dp"
            p1:layout_marginTop="8dp" />
        <LinearLayout
            p1:orientation="vertical"
            p1:minWidth="25px"
            p1:minHeight="25px"
            p1:layout_width="fill_parent"
            p1:layout_height="wrap_content"
            p1:id="@+id/linearLayout2">
            <TextView
                p1:text="Статистика:"
                p1:textAppearance="?android:attr/textAppearanceMedium"
                p1:layout_width="fill_parent"
                p1:layout_height="wrap_content"
                p1:id="@+id/textView1"
                p1:layout_marginTop="16dp"
                p1:layout_marginLeft="16dp"
                p1:layout_marginRight="16dp"
                p1:layout_marginBottom="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>